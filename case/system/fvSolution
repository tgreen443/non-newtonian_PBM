FoamFile
{
    format ascii;
    class dictionary;
    object fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "alpha.*"
    {
        nAlphaCorr 5;
        nAlphaSubCycles 3;
        nLimiterIter 10;

        solver smoothSolver;
        smoother symGaussSeidel;
        tolerance 1e-8;
        relTol 0.01;
        minIter 3;
    }
    p_rgh
    {
        solver GAMG;
        smoother DIC;
        nPreSweeps 0;
        nPostSweeps 2;
        nFinestSweeps 2;
        cacheAgglomeration true;
        nCellsInCoarsestLevel 10;
        agglomerator faceAreaPair;
        mergeLevels 1;
        // tolerance       1e-8;
        tolerance 1e-6;
        relTol 0.01;

        minIter 3;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol 0;
    }

    "U.*"
    {
        solver PBiCGStab;
        preconditioner DILU;
        tolerance 1e-08;
        relTol 0;
        minIter 3;
    }

    "e.*"
    {
        solver PBiCGStab;
        preconditioner DILU;
        tolerance 1e-06;
        relTol 0;
        minIter 3;
    }

    "(k|epsilon|omega).*"
    {
        solver PBiCGStab;
        preconditioner DILU;
        tolerance 1e-08;
        relTol 0;
        minIter 3;
    }
    "f.*"
    {
        solver PBiCGStab;
        preconditioner DILU;
        tolerance 1e-6;
        relTol 0;
    }
    bubbles
    {
        nCorr 1;
        tolerance 1e-4;
        scale true;
        solveOnFinalIterOnly true;
        sourceUpdateInterval 1;
    }
}

PIMPLE
{
    // momentumPredictor 	no;
    consistent yes;

    nOuterCorrectors 3; // 1-3
    nCorrectors 2;      // 1-2
    nNonOrthogonalCorrectors 1;
}

relaxationFactors
{
    fields
    {
        ".*" 1;
        // p   0.3;
        // pFinal  1;
    }
    equations
    {
        ".*" 1;
        /*
        U   0.3;
        alpha   0.4;
        "k|epsilon" 0.3;
        "(U|k|epsilon)Final"    1;
        */
    }
}

